{
  "name": "Bazarr NAS",
  "version": "v1.0.2-ls140-1",
  "slug": "bazarr_nas",
  "description": "Companion application to Sonarr and Radarr to download subtitles",
  "url": "https://github.com/alexbelgium/hassio-addons/tree/master/bazarr",
  "apparmor": true,
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf"
  ],
  "boot": "auto",
  "upstream": "v1.0.2-ls140",
  "webui": "http://[HOST]:[PORT:6767]",
  "startup": "services",
  "backup_exclude": [
    "**/Backups/*",
    "**/logs/*",
    "**/MediaCover/*"
  ],
  "devices": [
    "/dev/sda",
    "/dev/sdb",
    "/dev/sdc",
    "/dev/sdd",
    "/dev/sde",
    "/dev/sdf",
    "/dev/sdg",
    "/dev/nvme",
    "/dev/mmcblk",
    "/dev/sda1",
    "/dev/sdb1",
    "/dev/sdc1",
    "/dev/sdd1",
    "/dev/sde1",
    "/dev/sdf1",
    "/dev/sdg1",
    "/dev/sda2",
    "/dev/sdb2",
    "/dev/sdc2",
    "/dev/sdd2",
    "/dev/sde2",
    "/dev/sdf2",
    "/dev/sdg2",
    "/dev/sda3",
    "/dev/sdb3",
    "/dev/sda4",
    "/dev/sdb4",
    "/dev/nvme0",
    "/dev/nvme1",
    "/dev/nvme2"
  ],
  "environment": {
    "PUID": "0",
    "PGID": "0"
  },
  "ingress": false,
  "map": [
    "config:rw",
    "share:rw",
    "media:rw",
    "ssl"
  ],
  "options": {
    "PUID": 0,
    "PGID": 0
  },
  "ports": {
    "6767/tcp": 6767
  },
  "ports_description": {
    "6767/tcp": "web interface"
  },
  "privileged": [
    "SYS_ADMIN",
    "DAC_READ_SEARCH"
  ],
  "schema": {
    "PUID": "int",
    "PGID": "int",
    "TZ": "str?",
    "networkdisks": "str?",
    "cifsusername": "str?",
    "cifspassword": "str?"
  }
}
