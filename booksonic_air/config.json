{
  "apparmor": true,
  "arch": ["aarch64", "amd64", "armv7", "armhf"],
  "boot": "auto",
  "description": "platform for accessing the audibooks you own wherever you are",
  "devices": [
    "/dev/sda1",
    "/dev/sdb1",
    "/dev/sdc1",
    "/dev/sdd1",
    "/dev/sde1",
    "/dev/sdf1",
    "/dev/sdg1",
    "/dev/sda2",
    "/dev/sdb2",
    "/dev/sdc2",
    "/dev/sdd2",
    "/dev/sde2",
    "/dev/sdf2",
    "/dev/sdg2"
  ],
  "environment": {
    "PUID": "0",
    "PGID": "0"
  },
  "map": ["share:rw", "media:rw"],
  "name": "Booksonic-air",
  "options": {
    "PUID": 0,
    "PGID": 0,
    "networkdisks": "<//SERVER/SHARE>,<//SERVER2/SHARE2>",
    "cifsusername": "<username>",
    "cifspassword": "<password>"
  },
  "ports": {
    "4040/tcp": 4040
  },
  "ports_description": {
    "4040/tcp": "web interface"
  },
  "privileged": ["SYS_ADMIN", "DAC_READ_SEARCH"],
  "schema": {
    "PUID": "int",
    "PGID": "int",
    "TZ": "str?",
    "localdisks": "str?",
    "networkdisks": "str?",
    "cifsusername": "str?",
    "cifspassword": "str?"
  },
  "slug": "booksonic-air_nas",
  "upstream": "v2009.1.0-ls37",
  "url": "https://github.com/alexbelgium/hassio-addons",
  "version": "v2009.1.0-ls37",
  "webui": "http://[HOST]:[PORT:4040]"
}
