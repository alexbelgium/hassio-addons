{
	"name": "TeslaMate",
	"version": "1.28.1",
	"slug": "teslamate",
	"description": "A powerful data logger for Tesla vehicles",
	"url": "https://github.com/bruvv/hassio-addons/tree/master/teslamate",
	"codenotary": "alexandrep.github@gmail.com",
	"arch": ["aarch64", "amd64", "armv7"],
	"init": false,
	"startup": "services",
	"boot": "auto",
	"map": ["ssl"],
	"ingress": true,
	"ingress_port": 4000,
	"ingress_entry": "/",
	"panel_icon": "mdi:car-connected",
	"panel_title": "TeslaMate",
	"ports": {
		"4000/tcp": "Web interface (Not required with ingress)",
		"8080/tcp": null
	},
	"ports_description": {
		"4000/tcp": "Web interface (Not required with ingress)",
		"8080/tcp": "Grafana interface (optional)"
	},
	"services": ["postgres:want", "mqtt:want"],
	"hassio_api": true,
	"hassio_role": "default",
	"webui": "http://[HOST]:[PORT:4000]",
	"watchdog": "http://[HOST]:[PORT:4000]",
	"schema": {
		"database_host": "str",
		"database_name": "str?",
		"database_user": "str?",
		"database_pass": "password?",
		"database_port": "port?",
		"mqtt_host": "str?",
		"mqtt_username": "str?",
		"mqtt_password": "password?",
		"mqtt_tls": "bool?",
		"mqtt_tls_accept_invalid_certs": "bool?",
		"timezone": "str?",
		"language": "list(bg|cs|da|de|en|es|fr|fi|hu|it|nl|no|pl|pt|ro|ru|sk|sv|tr|zh)?",
		"log_level": "list(debug|info|warning|error)?",
		"disable_mqtt": "bool?",
		"disable_sleep_mode": "bool?",
		"enable_send_push_notifications": "bool?",
		"disable_api_access": "bool?"
	}
}
