{
  "apparmor": true,
  "arch": ["aarch64", "amd64", "armv7", "armhf"],
  "boot": "auto",
  "description": "Full Alpine desktop environments accessible via any modern web browser",
  "devices": [
    "/dev/net/tun",
    "/dev/sda",
    "/dev/sdb",
    "/dev/sdc",
    "/dev/sdd",
    "/dev/sde",
    "/dev/sdf",
    "/dev/sdg",
    "/dev/nvme",
    "/dev/mmcblk",
    "/dev/sda1",
    "/dev/sdb1",
    "/dev/sdc1",
    "/dev/sdd1",
    "/dev/sde1",
    "/dev/sdf1",
    "/dev/sdg1",
    "/dev/sda2",
    "/dev/sdb2",
    "/dev/sdc2",
    "/dev/sdd2",
    "/dev/sde2",
    "/dev/sdf2",
    "/dev/sdg2",
    "/dev/nvme0",
    "/dev/nvme1",
    "/dev/nvme2",
    "/dev/mmcblk0",
    "/dev/mmcblk0p1"
  ],
  "environment": {
    "PUID": "0",
    "PGID": "0",
    "shm_size": "1gb"
  },
  "full_access": true,
  "map": ["media:rw", "config:rw", "share:rw", "ssl"],
  "name": "Webtop Alpine",
  "privileged": ["SYS_ADMIN", "DAC_READ_SEARCH", "NET_ADMIN"],
  "ports": {
    "3000/tcp": 3000
  },
  "ports_description": {
    "3000/tcp": "web interface"
  },
  "options": {
    "PUID": 0,
    "PGID": 0
  },
  "schema": {
    "PUID": "int",
    "PGID": "int",
    "TZ": "str",
    "localdisks": "str?",
    "networkdisks": "str?",
    "cifsusername": "str?",
    "cifspassword": "str?",
    "cifsdomain": "str?"
  },
  "slug": "webtop_alpine",
  "upstream": "1.0",
  "url": "https://github.com/alexbelgium/hassio-addons",
  "version": "1.0",
  "webui": "http://[HOST]:[PORT:3000]"
}
